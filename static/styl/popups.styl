@media only screen and (max-width: 1200px) {
	.autodetection,
	.scountry,
	.scity {
		width: 90vw;
		background: none;
	}

	.scountry__tab-links {
		flex-wrap: wrap;
	}

	.scountry__tab-links-item:before {
		bottom: -10px;
	}
}

@media only screen and (max-width: 768px) {
	.autodetection,
	.scountry,
	.scity {
		width: 85vw;
		background: none;
		padding: 50px 25px;
	}

	.autodetection__language {
		right: 13px;
		top: 26px;
	}

	.custom-close {
		right: 0;
	}

	.scountry__tab-links::before {
		left: 0px;
		right: 0px;
	}

	.scity__tab-links::before {
		width: 100%;
	}

	.scountry__column,
	.scity__column {
		flex-direction: column;
	}

	.scountry__list,
	.scity__list {
		width: 100%;
		margin-right: 0;
		margin-top: 0;
		margin-bottom: 0;
	}

	.fancybox-overlay {
		overflow: auto!important;
	}

	.fancybox-inner {
		height: auto!important;
	}

	.show-more {
		display: block;
	}

	.scity__column--popular {
		margin-bottom: 10px;
	}

	.scity__column--hidden {
		display: none!important;
	}
}

